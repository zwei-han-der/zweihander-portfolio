{
  "name": "zweihander-portfolio",
  "private": true,
  "type": "module",
  "scripts": {
    "build:web": "bun build apps/src/main.tsx --outdir=apps/dist --splitting --format=esm && powershell -Command \"Copy-Item apps/index.html apps/dist/index.html -Force\"",
    "dev": "bun run build:web && bun server/src/server.ts",
    "build": "bun run build:web",
    "preview": "bun run server/src/server.ts"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "elysia": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1"
  }
}
